generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PolicyType {
  AUTO
  HOME
  LIFE
  HEALTH
  BUSINESS
}

enum QuoteStatus {
  ACTIVE
  EXPIRED
  CONVERTED
}

model Quote {
  id              String      @id @default(uuid())
  customerId      String      // Reference to customer in customer-service
  quoteNumber     String      @unique
  type            PolicyType
  status          QuoteStatus @default(ACTIVE)
  coverageAmount  Decimal     @db.Decimal(12, 2)
  premium         Decimal     @db.Decimal(10, 2)
  expiresAt       DateTime
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  @@index([customerId])
  @@index([quoteNumber])
  @@index([status])
  @@index([expiresAt])
}
