generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ClaimStatus {
  SUBMITTED
  UNDER_REVIEW
  APPROVED
  DENIED
  PAID
}

model Claim {
  id              String      @id @default(uuid())
  userId          String      // Reference to user in user-service
  organizationId  String      // Reference to organization in user-service
  policyId        String      // Reference to policy in policy-service
  claimNumber     String      @unique
  status          ClaimStatus @default(SUBMITTED)
  incidentDate    DateTime
  description     String
  claimAmount     Decimal     @db.Decimal(10, 2)
  approvedAmount  Decimal?    @db.Decimal(10, 2)
  denialReason    String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  statusHistory   ClaimStatusHistory[]

  @@index([userId])
  @@index([organizationId])
  @@index([policyId])
  @@index([claimNumber])
  @@index([status])
}

model ClaimStatusHistory {
  id             String       @id @default(uuid())
  claimId        String
  claim          Claim        @relation(fields: [claimId], references: [id], onDelete: Cascade)
  organizationId String       // Denormalized for querying
  oldStatus      ClaimStatus?
  newStatus      ClaimStatus
  changedBy      String       // userId who made the change
  changedAt      DateTime     @default(now())
  reason         String?      // Optional reason for the change
  metadata       Json?        // Additional context

  @@index([claimId])
  @@index([organizationId])
  @@index([changedAt])
  @@index([changedBy])
}
