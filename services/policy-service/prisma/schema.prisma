generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PolicyType {
  AUTO
  HOME
  LIFE
  HEALTH
  BUSINESS
}

enum PolicyStatus {
  ACTIVE
  EXPIRED
  CANCELLED
  PENDING
}

model Policy {
  id             String       @id @default(uuid())
  userId         String       // Reference to user in user-service
  organizationId String       // Reference to organization in user-service
  policyNumber   String       @unique
  type           PolicyType
  status         PolicyStatus @default(PENDING)
  startDate      DateTime
  endDate        DateTime
  premium        Decimal      @db.Decimal(10, 2)
  coverageAmount Decimal      @db.Decimal(12, 2)
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt

  @@index([userId])
  @@index([organizationId])
  @@index([policyNumber])
  @@index([status])
}
