generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id          String   @id @default(uuid())
  email       String   @unique
  firstName   String
  lastName    String
  dateOfBirth DateTime
  phone       String
  street      String
  city        String
  state       String
  zipCode     String
  country     String   @default("USA")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("customers")
}
