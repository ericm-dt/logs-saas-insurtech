apiVersion: v1
kind: Secret
metadata:
  name: dynatrace-secrets
  namespace: dynaclaimz
type: Opaque
stringData:
  # Dynatrace Environment URL (without trailing slash)
  # Example: https://abc12345.live.dynatrace.com
  DYNATRACE_URL: "https://your-environment.live.dynatrace.com"
  
  # Dynatrace API Token
  # Required permissions (scopes):
  #   - storage:files:write
  #   - storage:files:delete (optional, for cleanup)
  #
  # To create a token:
  # 1. Go to Settings > Access tokens
  # 2. Click "Generate new token"
  # 3. Add the required scopes above
  # 4. Copy the token value here
  DYNATRACE_API_TOKEN: "dt0c01.YOUR_TOKEN_HERE.LONG_TOKEN_STRING"
